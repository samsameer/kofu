<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="5dp">
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardElevation="0dp">

        <ImageView
            android:id="@+id/imgVie"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="@drawable/riple"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/nnn"
            android:visibility="visible" />


        <LinearLayout
            android:id="@+id/itr"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_marginTop="200dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="1">

            <CheckedTextView
                android:id="@+id/ch1k"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/riple"
                android:checked="false"
                android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
                android:drawablePadding="5dp"
                android:gravity="left|center"
                android:singleLine="false"
                android:textColor="@color/selected_txt"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold" />


            <!--<TextView-->
            <!--style="@style/tst"-->
            <!--//
            <!-android:text="Remarks"-->
            <!--android:textStyle="bold|italic"-->
            <!--android:textColor="@color/white"-->
            <!--android:layout_marginLeft="2dp"-->
            <!--android:layout_weight="0.7"-->
            <!--android:layout_margin="2dp"-->
            <!--android:gravity="center"-->
            <!--android:textSize="18sp"-->
            <!--android:background="@color/txtgray"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="fill_parent"-->
            <!--/>-->

            <TextView
                android:id="@+id/txt2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.1"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/txtgray"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <EditText
                android:id="@+id/npe1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1.2"
                android:gravity="center"
                android:hint="QTY"
                android:numeric="integer"
                android:paddingTop="0dp"
                android:textColor="@color/text_secondary"
                android:textSize="18sp"
                android:visibility="gone"


                />

            <ImageView
                android:id="@+id/renrk"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1.2"
                android:gravity="center"
                android:padding="2dp"
                android:src="@drawable/chat"
                android:visibility="gone" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/txremrk"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_marginTop="270dp"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1">

            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"
                android:background="@color/black_overlay">

                <TextView
                    android:id="@+id/textVV"
                    style="@style/set"
                    android:background="@color/black_overlay"
                    android:drawableLeft="@drawable/cht"
                    android:drawablePadding="10dp"
                    android:singleLine="false"
                    android:text="" />
            </HorizontalScrollView>

            <TextView
                android:id="@+id/rmkbtn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="1dp"
                android:layout_weight="0.8"
                android:background="@color/tgray"
                android:checked="false"
                android:gravity="left|center"
                android:padding="5dp"
                android:singleLine="true"
                android:text="Remarks"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
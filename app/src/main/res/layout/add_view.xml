<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="1dp">
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"

        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_margin="1dp"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardElevation="0dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/addch1k"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.4"
                android:background="@drawable/riple"
                android:gravity="left|center"
                android:paddingLeft="10dp"

                android:textColor="@color/text_secondary"
                android:textSize="@dimen/twl_lower"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/addtxt2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.1"
                android:gravity="left|center"

                android:singleLine="true"
                android:text=""
                android:textColor="@color/ind"
                android:textSize="@dimen/twl_lower"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addnpe1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1.2"
                android:background="@drawable/riple"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:hint="QTY"
                android:numeric="integer"
                android:paddingTop="0dp"
                android:textColor="@color/tgraddy"
                android:textSize="@dimen/twl_lower"


                />

            <ImageView
                android:id="@+id/adrenrk"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1.4"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/chat"
                android:visibility="invisible" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/orderName"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"

            android:layout_marginTop="50dp"
            android:background="@color/eoB"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent"
                android:checked="false"
                android:drawableLeft="@drawable/cht"
                android:drawablePadding="10dp"
                android:gravity="center|left"
                android:paddingLeft="12dp"
                android:singleLine="false"
                android:textColor="@color/text_secondary"
                android:textSize="16sp" />


            <HorizontalScrollView
                android:layout_width="fill_parent"
                 android:visibility="gone"
                android:layout_height="fill_parent"
                android:layout_marginBottom="2dp">

                <TextView
                    android:id="@+id/addrenrk"
                    style="@style/set"
                    android:background="@android:color/transparent"
                    android:paddingTop="1dp"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/twl_lower" />

            </HorizontalScrollView>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="5dp">
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/imgVie"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/nnn"
            android:visibility="visible" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="180dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:weightSum="1">

            <CheckedTextView
                android:id="@+id/ch1k"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/riple"
                android:checked="false"
                android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
                android:drawablePadding="5dp"
                android:gravity="left|center"
                android:singleLine="false"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/twl_lower" />


            <!--<TextView-->
            <!--style="@style/tst"-->
            <!--android:text="Remarks"-->
            <!--android:textStyle="bold|italic"-->
            <!--android:textColor="@color/white"-->
            <!--android:layout_marginLeft="2dp"-->
            <!--android:layout_weight="0.7"-->
            <!--android:layout_margin="2dp"-->
            <!--android:gravity="center"-->
            <!--android:textSize="18sp"-->
            <!--android:background="@color/txtgray"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="fill_parent"-->
            <!--/>-->

            <TextView
                android:id="@+id/txt2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.1"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/txtgray"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <EditText
                android:id="@+id/npe1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1.2"
                android:gravity="center"
                android:hint="QTY"
                android:numeric="integer"
                android:paddingTop="0dp"
                android:textColor="@color/text_secondary"
                android:textSize="18sp"
                android:visibility="gone"


                />

            <ImageView
                android:id="@+id/renrk"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1.2"
                android:gravity="center"
                android:padding="2dp"
                android:src="@drawable/chat"
                android:visibility="gone" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginTop="100dp"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:weightSum="1">

            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"
                android:background="@color/eoB">

                <TextView
                    android:id="@+id/textVV"
                    style="@style/set"
                    android:drawableLeft="@drawable/cht"
                    android:drawablePadding="10dp"
                    android:text=""
                    android:textSize="@dimen/twl_lower" />
            </HorizontalScrollView>

            <TextView
                android:id="@+id/rmkbtn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="1dp"
                android:layout_weight="0.8"
                android:background="@color/tgray"
                android:checked="false"
                android:gravity="left|center"
                android:padding="5dp"
                android:singleLine="true"
                android:text="Remarks"
                android:textColor="@color/white"
                android:textSize="@dimen/twl_lower" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
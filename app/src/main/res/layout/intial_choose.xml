<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="800dp"
    android:layout_height="370dp"

    android:background="@color/myTextPrimaryColor">
    <!--xmlns:pj="http://schemas.android.com/apk/res/com.example.jabbir.myapplication"-->
    <ImageView
        android:id="@+id/imtxt"
        android:layout_width="@dimen/min_twohun_height"
        android:layout_height="370dp"
        android:background="@drawable/dome"
        android:padding="60dp"
        android:scaleType="center"
        android:visibility="visible" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="400dp"
        android:background="@color/indigo" />

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/mf_35"
        android:layout_marginLeft="@dimen/min_twohun_height"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <TextView
            android:id="@+id/frstName"
            style="@style/tst"
            android:layout_height="fill_parent"
            android:layout_weight="0.25"
            android:fontFamily="sans-serif-condensed"
            android:singleLine="false"
            android:text=""
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/twl_lower"


            />

        <com.sd.epos.customeralpha.common.CoolPriceView
            android:id="@+id/frstpric"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:layout_weight="0.75"
            android:gravity="bottom|right"
            android:textColor="#FFF"
            android:textSize="@dimen/twl_lower"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btm"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/mf_45"
        android:layout_marginLeft="@dimen/min_twohun_height"
        android:layout_marginTop="@dimen/mf_35"
        android:orientation="horizontal"

        android:visibility="visible">


        <TextView
            style="@style/tst"
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2dp"
            android:gravity="right|center"
            android:text="Qty:"
            android:textColor="@color/text_secondary"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/qty_mins"
            style="@style/tst"
            android:layout_width="@dimen/min_onehun_height"
            android:layout_height="fill_parent"
            android:layout_margin="4dp"
            android:layout_marginLeft="1dp"
            android:background="@drawable/riple"
            android:gravity="center"
            android:text="-"

            android:textColor="@color/text_secondary"
            android:textSize="@dimen/t_lower" />

        <!--<EditText-->
        <!--style="@style/tst"-->
        <!--android:layout_marginRight="5dp"-->
        <!--android:layout_width="150dp"-->
        <!--/>-->
        <EditText
            android:id="@+id/l_qty"
            style="@style/tst"
            android:layout_width="@dimen/min_onehun_height"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:padding="1dp"
            android:clickable="false"
            android:focusable="false"
            android:text="1"
            android:textColor="@color/gold"
            android:textSize="@dimen/ein_lower" />

        <TextView
            android:id="@+id/qty_plus"
            style="@style/tst"
            android:layout_width="@dimen/min_onehun_height"
            android:layout_height="fill_parent"
            android:layout_margin="4dp"
            android:background="@drawable/riple"
            android:gravity="center"
            android:padding="1dp"
            android:text="+"

            android:textColor="@color/text_secondary"
            android:textSize="@dimen/t_lower" />


    </LinearLayout>

<TextView
    android:id="@+id/tcdRe"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Remarks:"
    android:layout_marginLeft="@dimen/min_twohun_height"
    android:visibility="gone"
    android:layout_marginTop="150dp"
    android:textColor="@color/text_secondary"
    android:textSize="20sp"

    />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/newremrk"
        android:layout_width="fill_parent"
        android:layout_marginLeft="@dimen/min_twohun_height"
        android:layout_marginTop="180dp"
        android:visibility="gone"
        android:layout_height="100dp">

    </android.support.v7.widget.RecyclerView>



    <Button
        android:id="@+id/_cnlbtn"
        android:layout_width="140dp"
        android:layout_height="@dimen/mf_35"
        android:layout_marginLeft="@dimen/min_twohun_height"
        android:layout_marginTop="270dp"
        android:background="@drawable/rd_corner"
        android:gravity="center"

        android:text="CANCEL"
        android:textColor="@color/white"
        android:textSize="@dimen/twl_lower"
        android:textStyle="bold" />

    <Button
        android:id="@+id/_addbtn"
        android:layout_width="140dp"
        android:layout_height="@dimen/mf_35"
        android:layout_marginLeft="630dp"
        android:layout_marginTop="270dp"

        android:background="@drawable/r_corner"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:text="ADD ORDER"
        android:textColor="@color/white"
        android:textSize="@dimen/twl_lower"
        android:textStyle="bold" />

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="fill_parent">




    <LinearLayout
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="fill_parent"
        android:background="@drawable/r_corner_white"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="120dp"
            android:layout_width="fill_parent"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/dome_new"
            android:layout_height="wrap_content" />

        <com.sd.epos.customeralpha.common.TextViewPlus
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Dome eMenu"
            android:textColor="@color/text_secondary"
            android:textSize="60sp"
            android:textStyle="bold"
            foo:customFont="avenir_bold.otf" />


        <com.sd.epos.customeralpha.common.TextViewPlus
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:paddingStart="150dp"
            android:gravity="center"
            android:text="World's finest coffees"
            android:textColor="@color/primarycolor_orange"
            android:textSize="30sp"
            foo:customFont="avenir_regula.otf" />


    </LinearLayout>
        <ImageView
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@color/white"
            android:layout_marginBottom="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/dome"
            android:layout_height="fill_parent" />
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:text="V:3.0   28th DEC 2016"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold" />





</RelativeLayout>
